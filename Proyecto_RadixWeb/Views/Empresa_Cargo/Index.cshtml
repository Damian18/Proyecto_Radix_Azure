@model Proyecto_RadixWeb.Models.MultiplesClases

@{
    ViewBag.Title = "Index EmpresasCargos";
}
@*<link href="~/PaginaDashB/tablas/css/tablas.css" rel="stylesheet" />*@
<div id="contenido_vista" style="margin-top: 10%;margin-left:10%">
    <div class="card mb-3 mt-2" style="border: 1px solid;">
        <div class="card-header">
            <div class="col col-xs-1 col-md-1 col-lg-1">
                <i class="fas fa-table"></i>
            </div>
            <div class="col col-xs-8 col-md-8 col-lg-8">
                <h5 class="panel-title" style="text-align:center"><b>Cargos Generales de la empresa @ViewBag.emrpesa</b> </h5>
            </div>
            <div class="col col-xs-3 col-md-3 col-lg-3 text-right">
                <a class="btn btn-sm btn-danger" href="#" data-toggle="modal" data-target="#cargo">Agregar Cargo </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered table-condensed">
                    <tr style="background-color:#d7d6d6">
                        <th>
                            Cargo
                        </th>
                        <th>
                            Empresa
                        </th>
                        <th>
                            Plantilla Contrato
                        </th>
                        <th>
                            Descargar
                        </th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.ObjEEmpresa_Cargo)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.cargos.Car_Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.empresas.Emp_Nom)
                            </td>

                            @if (item.PC_Id != null)
                            {

                                <td>
                                    <a class="btn btn-success" href="@Url.Action("ViewPdf", "Empresa_Cargo", new { id = item.PC_Id })" target="_blank">Ver PDF</a>
                                </td>
                                <td>

                                    <a class="btn btn-success" href="@Url.Action("DescargarDocx","Planillascontratos",new { id= item.PC_Id})">Descargar Word</a>
                                </td>
                            }
                            else
                            {

                                <td>
                                    <a class="btn btn-success plantilla" id="@item.Empcar_id" href="#" data-toggle="modal" data-target="#MiPlantilla">Agregar Plantilla</a>
                                </td>
                            }
                            <td align="center">

                                <a class="btn btn-outline-secondary" data-toggle="modal" data-target="#modaleditar"><i class="fas fa-edit"></i></a>
                            </td>
                            <td align="center">
                                <a class="btn btn-danger" data-toggle="modal" data-target="#modaleliminar"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="MiPlantilla" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm("Index", "Empresa_Cargo", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @Html.AntiForgeryToken()

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nueva Plantilla</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!--Contenido del centro-->
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                    @Html.Hidden("empcar_id")

                    <div class="form-group">
                        @Html.LabelFor(model => model.ObjPlantillascontratos.PC_Nom)
                        @Html.Editor("PC_Nom", new { htmlAttributes = new { @class = "form-control" } })
                        @*@Html.Editor("PC_Nom", new { htmlAttributes = new { @class = "form-control" } })*@


                    </div>

                    <div class="input-group">
                        Estado
                        <div class="col-md-10">
                            <input type="file" name="plantilla" />
                        </div>
                    </div>

                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        }
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="cargo" tabindex="-1" role="dialog" aria-labelledby="cargo" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm("Create", "Empresa_Cargo", new { subemp_id = ViewBag.subemp_id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nuevo Cargo</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!--Contenido del centro-->
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Cargo")
                        @Html.Editor("car_nom", new { htmlAttributes = new { @class = "form-control" } })
                    </div>


                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        }
    </div>
</div>

