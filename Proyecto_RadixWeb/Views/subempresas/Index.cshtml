@model Proyecto_RadixWeb.Models.MultiplesClases

@{
    ViewBag.Title = "Index SubEmpresas";
}
<link href="~/PaginaDashB/tablas/css/sucursales.css" rel="stylesheet" />
@*<link href="~/PaginaDashB/tablas/css/tablas.css" rel="stylesheet" />*@
<div id="contenido_vista" style="margin-top: 10%">
  
    <div class="container">
        <div class="text-lg-right text-md-right text-xs-center" style="margin-top:15%">
            <a class="btn btn-danger ml-2" href="#" data-toggle="modal" data-target="#MiModal"><i class="fas fa-plus"> Nueva Sucursal</i></a>
        </div>
        <div class="row active-with-click" style="margin-left:5%;margin-top:1%;">

            @foreach (var item in Model.ObjESubEmpresas)
            {
                <div class="container">
                    <div class="card bg-light">
                        <div class="card-body">
                            <div class="col-md-9 col-sm-6 col-xs-12  col-lg-5">

                                <article class="material-card Red">

                                    <h2>
                                        <span>@Html.DisplayFor(modelItem => item.Sub_Nom)</span>
                                        <strong>
                                            <i class="fas fa-apple-alt"></i>
                                            Ubicado en @Html.DisplayFor(modelItem => item.comunas.Com_Nom)
                                        </strong>
                                    </h2>
                                    <div class="mc-content">
                                        <div class="img-container">
                                            <img class="img-responsive" src="https://image.freepik.com/vector-gratis/elegante-fondo-verde-poligono-geometrico_1035-13146.jpg">
                                        </div>
                                        <div class="mc-description">
                                            Informacion sobre esta sucursal: dirección @Html.DisplayFor(modelItem => item.Sub_Dir)
                                        </div>

                                    </div>
                                    <a class="mc-btn-action">
                                        <i class="fa fa-bars"></i>
                                    </a>
                                    <div class="mc-footer">
                                        <h4>
                                            Opciones
                                        </h4>
                                        <div class="container">
                                            <div class="row">
                                                <div class="col col-sm-6 col-md-3 col-lg-6 col-xs-6">
                                                    <a class="btn btn-outline-secondary" data-toggle="modal" data-target="#modaleditar"><i class="fas fa-edit"></i></a>
                                                </div>
                                                <div class="col col-sm-6 col-md-6 col-lg-6 col-xs-6">

                                                    <a class="btn btn-danger ml-1" data-toggle="modal" data-target="#modaleliminar"><i class="fas fa-trash-alt"></i></a>
                                                </div>
                                            </div>
                                        </div>


                                    </div>

                                </article>
                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-12 col-sm-12 col-lg-3 mt-5" style="margin-top: 5%;padding-right: 50%;">
                                <a href="@Url.Action("Index", "Contratos", new { subemp_id = item.Sub_Id })" class="mt-2"><i class="fas fa-info-circle btn btn-lg btn-info" style="margin-left: 25%;"> Informacion sobre sucursal</i></a>
                                <a href="@Url.Action("Index", "SubEmpresa_Cargos", new { subemp_id = item.Sub_Id })" class="mt-2"><i class="fas fa-user-tag btn btn-lg btn-info" style="margin-left: 25%;"> Cargos Especificos</i></a>
                                <a href="@Url.Action("Index", "Sectores", new { subemp_id = item.Sub_Id })" class="mt-2"><i class="fas fa-map-marker-alt btn btn-lg btn-info" style="margin-left: 25%;"> Sectores de la sucursal</i></a>

                            </div>

                        </div>
                    </div>
                </div>
            }

        </div>
            </div>
</div>
  


<!-- Modal -->
<div class="modal fade" id="MiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nueva Sucursal</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!--Contenido del centro-->
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Sucursal")
                        @Html.Editor("Sub_Nom", new { htmlAttributes = new { @class = "form-control" } })
                    </div>


                    <div class="form-group">
                        @Html.Label("Dirección")
                        @Html.Editor("Sub_Dir", new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        @Html.Label("Región")
                        @if (ViewBag.regiones != null)
                        {
                            @Html.DropDownListFor(model => model.ObjRegiones.Reg_Id, ViewBag.regiones as SelectList, "--- Seleccionar Región ---", new { @class = "form-control" })

                        }
                    </div>
                    <div class="form-group">
                        @Html.Label("Provincia")
                        @Html.DropDownListFor(model => model.ObjProvincias.Prov_Id, new SelectList(" "), "--- Seleccionar Provincia ---", new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        @Html.Label("Comuna")
                        @Html.DropDownList("Com_Id", new SelectList(" "), "--- Seleccionar Comuna ---", new { @class = "form-control" })

                    </div>
                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        }
    </div>
</div>
<!--EDITAR-->
<div class="modal fade" id="modaleditar" tabindex="-1" role="dialog" aria-labelledby="modaleditar" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Editar sucursal</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!--Contenido del centro-->
                <div class="modal-body">
                 
                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        }
    </div>
</div>
<!--ELIMINAR-->
<div class="modal fade" id="modaleliminar" tabindex="-1" role="dialog" aria-labelledby="modaleliminar" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Quieres eliminar esta sucursal?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!--Contenido del centro-->
                <div class="modal-body">
                
                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Eliminar</button>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    
    $(document).ready(function () {

        $('#contenido_vista').appendTo('#contenido_general');

        $("#ObjRegiones_Reg_Id").change(function () {
            $.get("/SubEmpresas/ObtenerProvincia", { Reg_Id: $("#ObjRegiones_Reg_Id").val() }, function (data) {
                $("#ObjProvincias_Prov_Id").empty();
                $.each(data, function (Create, row) {

                    $("#ObjProvincias_Prov_Id").append("<option value='" + row.Prov_Id + "'>" + row.Prov_Nom + "</option>")
                });
            });
        });

        $("#ObjProvincias_Prov_Id").change(function () {
            $.get("/SubEmpresas/ObtenerComuna", { Prov_Id: $("#ObjProvincias_Prov_Id").val() }, function (data) {
                $("#Com_Id").empty();
                $.each(data, function (Create, row) {

                    $("#Com_Id").append("<option value='" + row.Com_Id + "'>" + row.Com_Nom + "</option>")
                });
            });
        });
    });


        $('.material-card > .mc-btn-action').click(function () {
            var card = $(this).parent('.material-card');
            var icon = $(this).children('i');
            icon.addClass('fa-spin-fast');

            if (card.hasClass('mc-active')) {
                card.removeClass('mc-active');

                window.setTimeout(function () {
                    icon
                        .removeClass('fa-arrow-left')
                        .removeClass('fa-spin-fast')
                        .addClass('fa-bars');

                }, 800);
            } else {
                card.addClass('mc-active');

                window.setTimeout(function () {
                    icon
                        .removeClass('fa-bars')
                        .removeClass('fa-spin-fast')
                        .addClass('fa-arrow-left');

                }, 800);
            }
        });
   

</script>
