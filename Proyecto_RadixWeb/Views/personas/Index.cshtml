@model IEnumerable<Proyecto_RadixWeb.Models.personas>

@{
    ViewBag.Title = "Index";
}
<link href="~/PaginaDashB/tablas/css/tablas.css" rel="stylesheet" />
<div id="contenido_vista" style="margin-top: 10%;margin-left:10%">
    <div class="card mb-3 mt-2" style="border: 1px solid;">
        <div class="card-header">


            <div class="col col-xs-1 col-md-1 col-lg-1">
                <i class="fas fa-table"></i>
            </div>
            <div class="col col-xs-8 col-md-8 col-lg-8">
                <h5 class="panel-title" style="text-align:center"><b>Personas</b> </h5>
            </div>
            <div class="col col-xs-3 col-md-3 col-lg-3 text-right">
                <button type="button" class="btn btn-danger btn-sm m-0 documento" href="#" data-toggle="modal" data-target="#NewPersona">  Nuevo Trabajador</button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered table-condensed">
                    <tr style="background-color:#d7d6d6">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Per_Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Per_ApePat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Per_ApeMat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Per_Dir)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Per_Tel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Per_Suel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Per_Des)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cargos.Car_Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.estadosciviles.EC_Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fichadescuentos.Desc_Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.generos.Gen_Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nacionalidades.Nac_Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tiposhorasextras.THor_Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tipoimpuestos.TImp_nom)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Per_Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Per_ApePat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Per_ApeMat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Per_Dir)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Per_Tel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Per_Suel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Per_Des)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cargos.Car_Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.estadosciviles.EC_Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fichadescuentos.Desc_Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.generos.Gen_Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nacionalidades.Nac_Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tiposhorasextras.THor_Nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tipoimpuestos.TImp_nom)
                            </td>


                            @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Per_Rut }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Per_Rut }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Per_Rut })
                                </td>*@

                            <td align="center">

                                <a class="btn btn-outline-secondary" data-toggle="modal" data-target="#modaleditar"><i class="fas fa-edit"></i></a>
                            </td>
                            <td align="center">
                                <a class="btn btn-danger" data-toggle="modal" data-target="#modaleliminar"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>

    </div>
</div>


<!--editar-->
<!-- Modal -->
<div class="modal fade" id="modaleditar" tabindex="-1" role="dialog" aria-labelledby="modaleditar" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

