@model Proyecto_RadixWeb.Models.MultiplesClases


@{
    ViewBag.Title = "Index";
}

<div id="contenido_vista" @*style="margin-top: 10%;margin-left:10%"*@>
    <article class="content responsive-tables-page">
        <div class="title-block">
            <div class="">
            </div>
            <div class="col col-xs-12 col-md-9 col-lg-9">
                <h1 class="title" style="text-align:center"><i class="fas fa-network-wired"></i>   Cuadrillas de la empresa @ViewBag.empresa </h1>
            </div>
            <div class="col col-xs-3 col-md-3 col-lg-3 text-right">
                <a class="btn btn-primary text-white" data-toggle="modal" data-target="#MiModal"><i class="fas fa-user-plus"></i> Agregar Cuadrilla</a>

            </div>
        </div>
        <section class="section">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="card-title-block">

                            </div>
                            <section class="example">
                                <div class="table-flip-scroll">
                                    <table class="table table-striped table-bordered table-hover flip-content">
                                        <thead class=" thead-inverse">
                                            <tr>
                                                <th>
                                                    Nombre
                                                </th>
                                                <th>
                                                    Sector
                                                </th>
                                                <th>
                                                    Variedad
                                                </th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="odd gradeX">

                                                @foreach (var item in Model.ObjECuarteles)
                                                {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.cuar_nom)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Sectores.sect_nom)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.VariedadesFrutas.var_nom)
                                                    </td>

                                                    <td align="center">

                                                        <a class="btn btn-outline-secondary" data-toggle="modal" data-target="#modaleditar"><i class="fas fa-edit"></i></a>
                                                    </td>
                                                    <td align="center">
                                                        <a class="btn btn-danger" data-toggle="modal" data-target="#modaleliminar"><i class="fas fa-trash-alt"></i></a>
                                                    </td>
                                                    <th>
                                                        <a href="@Url.Action("Index", "GruposCuarteles", new { cuar_id = item.cuar_id })" class="mt-2"><i class="fas fa-map-marker-alt btn btn-warning" style="margin-left: 25%;"> Grupos</i></a>


                                                    </th>
                                                    @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.cuar_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.cuar_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.cuar_id })
                </td>*@
                                                </tr>
                                            }


                                            </tbody>
                                        </table>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </article>



    </div>



<!-- Create -->
<div class="modal fade" id="MiModal" tabindex="-1" role="dialog" aria-labelledby="MiModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm("Create", "Cuarteles", new { sect_id = ViewBag.sect_id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nueva Cuadrilla</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!--Contenido del centro-->
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Cadrilla")
                        @Html.EditorFor(model => model.ObjCuarteles.cuar_nom, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        }
    </div>
</div>
