@model Proyecto_RadixWeb.Models.MultiplesClases


@{
    ViewBag.Title = "Index";
}
<link href="~/PaginaDashB/tablas/css/tablas.css" rel="stylesheet" />
<div id="contenido_vista" style="margin-top: 10%;margin-left:10%">
    <div class="card mb-3 mt-2" style="border: 1px solid;">
        <div class="card-header">

            @*@Html.ActionLink("Create New", "Create")*@

            <div class="col col-xs-1 col-md-1 col-lg-1">
                <i class="fas fa-table"></i>
            </div>
            <div class="col col-xs-8 col-md-8 col-lg-8">
                <h5 class="panel-title" style="text-align:center"><b>Cuarteles</b> </h5>
            </div>
            <div class="col col-xs-3 col-md-3 col-lg-3 text-right">
                <button type="button" class="btn btn-danger btn-sm m-0 documento" href="#" data-toggle="modal" data-target="#NewPersona">  Nuevo Trabajador</button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered table-condensed">
                    <tr style="background-color:#d7d6d6">
                        <th>
                            Nombre
                        </th>
                        <th>
                           Sector
                        </th>
                        <th>
                            Variedad
                        </th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.ObjECuarteles)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.cuar_nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sectores.sect_nom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VariedadesFrutas.var_nom)
                            </td>

                            <td align="center">

                                <a class="btn btn-outline-secondary" data-toggle="modal" data-target="#modaleditar"><i class="fas fa-edit"></i></a>
                            </td>
                            <td align="center">
                                <a class="btn btn-danger" data-toggle="modal" data-target="#modaleliminar"><i class="fas fa-trash-alt"></i></a>
                            </td>
                            @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.cuar_id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.cuar_id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.cuar_id })
                                </td>*@
                        </tr>
                    }

                </table>

            </div>
        </div>

    </div>
</div>

<!--editar-->
<!-- Modal -->
<div class="modal fade" id="modaleditar" tabindex="-1" role="dialog" aria-labelledby="modaleditar" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!--eliminar--><!-- Modal -->
<div class="modal fade" id="modaleliminar" tabindex="-1" role="dialog" aria-labelledby="modaleliminar" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>

    $(document).ready(function () {
        $('#contenido_vista').appendTo('#contenido_general');
    });

</script>

