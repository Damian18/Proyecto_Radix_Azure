@model IEnumerable<Proyecto_RadixWeb.Models.horario_laboral>

@{
    ViewBag.Title = "Index";
}


<div id="contenido_vista" style="margin-top: 90px; margin-left: 50px;">
    <div class="card mb-3 mt-2">
        <div class="card-header">
            <i class="fa fa-table"></i> Horarios Laborales
        </div>
        <div class="card-body">
            <div class="table-responsive">

                <h2>Horario</h2>

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Hl_Titulo)
                        </th>

                        <th>
                            Hora Inicio
                        </th>
                        <th>
                            Hora Fin
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hl_Titulo)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Hl_Inicio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hl_Termino)
                            </td>


                            <td>
                                <a href="@Url.Action("Asistencia_Personas", "Asistencias", new { Subempcar_id = item.Subempcar_id, horario_id=item.Hl_Id })" class="btn btn-outline-success btn-sm m-0">
                                    Medir Asistencia
                                </a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>

    $(document).ready(function () {
        $('#contenido_vista').appendTo('#contenido_general');
    });

</script>

