@model IEnumerable<Proyecto_RadixWeb.Models.horario_laboral>

@{
    ViewBag.Title = "Index";
}

  </br>
    </br>
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Horarios Laborales
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <h2>Horario</h2>

                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Hl_Titulo)
                            </th>

                            <th>
                                Hora Inicio
                            </th>
                            <th>
                                Hora Fin
                            </th>

                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hl_Titulo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Hl_Inicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hl_Termino)
                                </td>


                                <td>
                                    <a href="@Url.Action("Asistencia_Personas", "Asistencias", new { Subempcar_id = item.Subempcar_id, horario_id=item.Hl_Id })" class="btn btn-outline-success btn-sm m-0">
                                        Medir Asistencia
                                    </a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday </div>
        </div>
    </div>
</div>
