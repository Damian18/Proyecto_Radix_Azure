@model Proyecto_RadixWeb.Models.planillascontratos

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/estilo.css" rel="stylesheet" />

<script src="~/Scripts/dropzone/dropzone.js"></script>
<link href="~/Scripts/dropzone/dropzone.css" rel="stylesheet" />


<div class="content-wrapper">
    <div class="container-fluid">
        <div class="card mb-3">
            </br>
            
            </br>
            <div class="card-header">


                <i class="fa fa-table"></i> Data Table Example
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    @if (ViewBag.sms != null)
                    {
                    <div class="alert alert-success">
                        <strong>Success!</strong> Indicates a successful or positive action.@ViewBag.sms
                    </div>
                    }
                    @if (ViewBag.smserror != null)
                    {
                        <div class="alert alert-warning">
                            <strong>Warning!</strong> Indicates a warning that might need attention.@ViewBag.smserror
                        </div>
                    }

                    @using (Html.BeginForm("Create", "Planillascontratos", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()



                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="input-group " style="margin-left: 80px;width: 450px;margin-bottom: 10px;">
                            <div class="input-group-prepend">
                                <span class="input-group-text " id="" style="width: 150px;">Titulo Archivo</span>
                            </div>
                            @Html.EditorFor(model => model.PC_Nom, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PC_Nom, "", new { @class = "text-danger" })

                        </div>

                        <div class="input-group" style="margin-left: 80px;width: 450px;margin-bottom: 10px;">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="" style="width: 150px;">Estado</span>
                            </div>
                            <div style="background-color: white;">
                                <input type="file" name="plantilla" style="width: 300px;margin-left: 1px;margin-top: 5px;" />
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-primary" style=" margin-left: 250px;" />
                            </div>
                        </div>


                    }





                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }

                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
