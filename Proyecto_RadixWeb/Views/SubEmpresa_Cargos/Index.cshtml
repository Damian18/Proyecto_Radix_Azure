@model IEnumerable<Proyecto_RadixWeb.Models.subempresa_cargo>

@{
    ViewBag.Title = "Index SubEmpresaCargos";
}

<div id="contenido_vista" @*style="margin-top: 10%;margin-left:10%"*@>
    <article class="content responsive-tables-page">
        <div class="title-block">
            <div class="">
            </div>
            <div class="col col-xs-12 col-md-9 col-lg-9">
                <h1 class="title" style="text-align:center"><i class="far fa-newspaper"></i>   Privilegios </h1>
            </div>
            <div class="col col-xs-3 col-md-3 col-lg-3 text-right">
                <a class="btn btn-primary text-white" data-toggle="modal" data-target="#MiModal"><i class="fas fa-user-plus"></i> Agregar Cargo</a>
                @if (ViewBag.cargo == 0)
                {

                    @*@Html.ActionLink("Crear Cuenta Administrador Sucursal", "Create", new { subemp_id = ViewBag.subemp_id })*@
                    //  <a class="btn btn-success" href="#" data-toggle="modal" data-target="#MiModal">Crear Cargo de Administrador de Sucursal</a>
                    using (Html.BeginForm("Index", "SubEmpresa_Cargos", new { subemp_id = ViewBag.subemp_id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                      

                        <button class="btn btn-warning text-white mt-2" type="submit"><i class="fas fa-user-plus"></i>Generar el cargo de administrador</button>
                    }
                }
            </div>
        </div>
        <section class="section">
         
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="card-title-block">

                            </div>
                            <section class="example">
                                <div class="table-flip-scroll">
                                    <table class="table table-striped table-bordered table-hover flip-content">
                                        <thead class=" thead-inverse">
                                            <tr>
                                                <th>
                                                    Nombre
                                                </th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="odd gradeX">

                                                @foreach (var item in Model)
                                                {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.cargos.Car_Nom)
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Horario", "Horario_laboral", new { Subempcar_id = item.Subempcar_id })" class="btn btn-outline-success btn-sm m-0">
                                                            Horario
                                                        </a>
                                                        <a href="@Url.Action("Index", "Horario_laboral", new { Subempcar_id = item.Subempcar_id })" class="btn btn-outline-success btn-sm m-0">
                                                            Asistencia
                                                        </a>

                                                    </td>
                                                    <td align="center">

                                                        <a class="btn btn-outline-secondary" data-toggle="modal" data-target="#modaleditar"><i class="fas fa-edit"></i></a>
                                                    </td>
                                                    <td align="center">
                                                        <a class="btn btn-danger" data-toggle="modal" data-target="#modaleliminar"><i class="fas fa-trash-alt"></i></a>
                                                    </td>
                                                </tr>
                                            }

                                            </tbody>
                                        </table>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </article>

    </div>

<div class="modal fade" id="MiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm("Create", "Cargos", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            @Html.AntiForgeryToken()

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nuevo Cargo</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!--Contenido del centro-->
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">

                        @Html.Editor("Car_Nom", new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el cargo Administrador de Sucursal", @style = "text-align:center" } })

                    </div>


                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        }
    </div>
</div>

<!--editar-->
<!-- Modal -->
