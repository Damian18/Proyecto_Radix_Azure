@model Proyecto_RadixWeb.Models.MultiplesClases

@{
    ViewBag.Title = "Index grupos";
}




<div id="contenido_vista" @*style="margin-top: 10%;margin-left:10%"*@>
    <article class="content responsive-tables-page">
        <div class="title-block">
            <div class="">
            </div>
            <div class="col col-xs-12 col-md-9 col-lg-9">
                <h1 class="title" style="text-align:center"><i class="fas fa-user-friends"></i>  Encargados de Grupos de trabajadores de la empresa @ViewBag.empresa </h1>
            </div>
            <div class="col col-xs-3 col-md-3 col-lg-3 text-right">
                <a class="btn btn-primary text-white addGrupos" data-toggle="modal" data-target="#MiaddGrupo"><i class="fas fa-user-plus"></i> Crear Grupo </a>

            </div>
        </div>
        <section class="section">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="card-title-block">

                            </div>
                            <section class="example">
                                <div class="table-flip-scroll">
                                    <table class="table table-striped table-bordered table-hover flip-content">
                                        <thead class=" thead-inverse">
                                            <tr>
                                                <th>
                                                    Encargado
                                                </th>

                                                <th>
                                                    Cuadrilla
                                                </th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="odd gradeX">
                                                @foreach (var item in Model.ObjEGruposCuarteles)
                                                {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.contratos.personas.Per_Nom)
                                                        @Html.DisplayFor(modelItem => item.contratos.personas.Per_ApePat)

                                                    </td>
                                                    @*<td>
                                                            @Html.DisplayFor(modelItem => item.contratos1.personas.Per_Nom)
                                                            @Html.DisplayFor(modelItem => item.contratos1.personas.Per_ApePat)
                                                        </td>*@
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Cuarteles.cuar_nom)
                                                    </td>
                                                    <td align="center">

                                                        <a class="btn btn-outline-secondary" data-toggle="modal" data-target="#modaleditar"><i class="fas fa-edit"></i></a>
                                                    </td>
                                                    <td align="center">
                                                        <a class="btn btn-danger sectoreliminar" id="@item.gc_id" name="@item.Cuarteles.cuar_nom" href="#" data-toggle="modal" data-target="#Misectoreliminar"><i class="fas fa-trash-alt"></i></a>
                                                    </td>
                                                    <td align="center">
                                                        <a class="btn btn-primary" href="@Url.Action("Index","GrupoCuartelesDetalles",new { gc_id=item.gc_id })">Mi Grupo</a>
                                                    </td>
                                                    @*<td>
                                                            @Html.ActionLink("Edit", "Edit", new { id = item.gc_id }) |
                                                            @Html.ActionLink("Details", "Details", new { id = item.gc_id }) |
                                                            @Html.ActionLink("Delete", "Delete", new { id = item.gc_id })
                                                        </td>*@
                                                </tr>
                                            }


                                            </tbody>
                                        </table>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </article>



    </div>
    <!-- Create -->
    <div class="modal fade" id="MiaddGrupo" tabindex="-1" role="dialog" aria-labelledby="MiaddGrupo" aria-hidden="true">
        <div class="modal-dialog" role="document">
            @using (Html.BeginForm("Create", "GruposCuarteles", new { cuar_id = ViewBag.cuar_id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Nuevo Grupo</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <!--Contenido del centro-->
                    <div class="modal-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("Grupo")
                            @Html.EditorFor(model => model.ObjGruposCuarteles.gc_nom, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            @Html.Label("Encargado", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DropDownList("ObjGruposCuarteles_ConJefe_id", null, htmlAttributes: new { @class = "form-control" })
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!--Eliminar-->
    <div class="modal fade" id="Misectoreliminar" tabindex="-1" role="dialog" aria-labelledby="Misectoreliminar" aria-hidden="true">
        <div class="modal-dialog" role="document">
            @using (Html.BeginForm("Eliminar", "GruposCuarteles", new { cuar_id = ViewBag.cuar_id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title col-sm-11 col-md-11 col-lg-11 col-xl-11">¿Desea Eliminar El Sector <label id="nombresector"></label> ?</h4>
                        <button type="button" class="close col-sm-1 col-md-1 col-lg-1 col-xl-1" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <!--Contenido del centro-->

                    @Html.Hidden("gc_id")

                    <div class="modal-footer">
                        @* <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>*@
                        <button type="submit" class="btn btn-primary">Eliminar</button>
                    </div>
                </div>
            }
        </div>
    </div>



    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script>
        $(document).ready(function () {

            $('#contenido_vista').appendTo('#contenido_general');
        });


        $(".addGrupos").on("click", function () {

            $("#ObjGruposCuarteles_ConJefe_id").attr("name", "ObjGruposCuarteles.ConJefe_id");

        });
        $(".sectoreliminar").on("click", function () {

            $("#gc_id").val($(this).attr("id"));
            var nom = $(this).attr("name");
            document.getElementById("nombresector").innerHTML = nom;
            //$("#nombresector").val($(this).attr("name"));
        });
    </script>