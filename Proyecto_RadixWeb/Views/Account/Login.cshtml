@model Proyecto_RadixWeb.Models.MultiplesClases

@{
    ViewBag.Title = "Log in";
}
<link href="~/Content/css/login.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="" style="width:450px;margin-left: 380px;height: 200px;">
            <div class="form-login" style="margin-top: 5%;">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div>
                            <img src="~/Imagenes/Logo Radix_v2.png" style="  margin-left: 25%;    width: 250px;    height: 100px;" />
                        </div>
                        <h4 style="margin-left: 17%;height: 30px;">Iniciar Sesión</h4>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="input-group" style="height: 40px;">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.ObjEmpresas.Emp_Nom, new { @class = "form-control", placeholder = "Nombre Empresa" })
                                @Html.ValidationMessageFor(m => m.ObjEmpresas.Emp_Nom, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="input-group" style="height: 40px;">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>

                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.ObjLogin.Email, new { @class = "form-control", placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.ObjLogin.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="input-group" style="height: 40px;">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>

                            <div class="col-md-10">

                                @Html.PasswordFor(m => m.ObjLogin.Password, new { @class = "form-control", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.ObjLogin.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.ObjLogin.RememberMe)
                                    @Html.LabelFor(m => m.ObjLogin.RememberMe)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Iniciar Sesión" class="btn btn-primary" style="    margin-left: 96px;" />
                            </div>
                        </div>
                        <p>
                            @Html.ActionLink("Registrarse ?", "Register")
                        </p>
                        <p>
                            @Html.ActionLink("Olvido su contraseña?", "ForgotPassword")
                        </p>
                    }
                </section>

               

            </div>



        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>
