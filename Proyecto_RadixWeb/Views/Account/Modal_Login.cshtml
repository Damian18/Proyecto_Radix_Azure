@model Proyecto_RadixWeb.Models.MultiplesClases
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />


<!--Contenido del centro-->     
 @*LOGEAR*@

        <div class="container">
            <ul class="nav nav-tabs" style="margin-left:25%">
                <li class="active show"><a href="#login" data-toggle="tab" style="margin-left:5%"> <h2> Iniciar Sesión</h2></a></li>

                <li><a href="#" data-toggle="tab"> <h2>   </h2></a></li>
                <li><a href="#reg" data-toggle="tab" style="margin-right:5%"><h2>Registrar</h2></a></li>
            </ul>

            <div class="modal-tab-content">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {


                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form>
                        <div class=" tab-pane fade in active show" id="login">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ObjEmpresas.Emp_Nom, new { @class = "form-control", placeholder = "Nombre Empresa" })
                                @Html.ValidationMessageFor(m => m.ObjEmpresas.Emp_Nom, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ObjLogin.Email, new { @class = "form-control", placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.ObjLogin.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ObjLogin.Password, new { @class = "form-control", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.ObjLogin.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <div class="form-check">
                                    @Html.CheckBoxFor(m => m.ObjLogin.RememberMe)
                                    @Html.LabelFor(m => m.ObjLogin.RememberMe)
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="submit" value="Iniciar Sesión" class="btn btn-primary btn-block" style="font-size: 18px;">
                            </div>
                            <div class="text-center">
                                <a class="d-block small" href="forgot-password.html"> <h4> Olvido la contraseña?</h4></a>
                            </div>
                        </div>
                    </form>
                }
                @*REGISTRAR*@
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {


                    @Html.AntiForgeryToken()
                    <form>
                        <div class="tab-pane fade" id="reg">

                            <div class="form-group">

                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.ObjEmpresas.Emp_Nom, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese Nombre de la Empresa", @style = "text-align:center" } })
                                @Html.ValidationMessageFor(model => model.ObjEmpresas.Emp_Nom, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">

                                @* <input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email">*@
                                @Html.TextBoxFor(m => m.ObjRegistrar.Email, new { @class = "form-control", placeholder = "Ingrese Email", @style = "text-align:center" })

                            </div>
                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-6">

                                        @*<input class="form-control" id="exampleInputPassword1" type="password" placeholder="Password">*@
                                        @Html.PasswordFor(m => m.ObjRegistrar.Password, new { @class = "form-control", placeholder = "Ingrese Contraseña", @style = "text-align:center" })

                                    </div>
                                    <div class="col-md-6">

                                        @* <input class="form-control" id="exampleConfirmPassword" type="password" placeholder="Confirm password">*@
                                        @Html.PasswordFor(m => m.ObjRegistrar.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar Contraseña", @style = "text-align:center" })

                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="submit" value="Registrarse" class="btn btn-primary btn-block" style="font-size: 18px;" />
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
   




